    private async Task CopyFilesToBiosDirectories()
    {
        var selectedFiles = biosSystems
            .SelectMany(s => s.BiosFiles)
            .Where(f => !string.IsNullOrEmpty(f.SelectedPath))
            .ToList();

        if (selectedFiles.Count == 0)
        {
            await SetStatusMessage("No files selected to copy.", false);
            return;
        }

        try
        {
            isCopying = true;
            copyPercentage = 0;
            copyProgress = "Copying...";
            copyStatus = "Preparing to copy files...";
            StateHasChanged();
            
            // Auto-scroll to progress bar
            await Task.Delay(50); // Allow DOM to render
            await Utils.ScrollToProgressContainerAsync(JSRuntime);

            for (int i = 0; i < selectedFiles.Count; i++)
            {
                var biosFile = selectedFiles[i];
                copyStatus = $"Copying {biosFile.FileName} to {Path.GetDirectoryName(biosFile.ExpectedPath)} ({i + 1} of {selectedFiles.Count})";
                copyPercentage = (int)((i * 100) / selectedFiles.Count);
                StateHasChanged();

                // Create directory if it doesn't exist
                var destinationDirectory = Path.GetDirectoryName(biosFile.ExpectedPath);
                if (!string.IsNullOrEmpty(destinationDirectory))
                {
                    Directory.CreateDirectory(destinationDirectory);
                }

                // Copy the file
                File.Copy(biosFile.SelectedPath, biosFile.ExpectedPath, true);

                if (biosFile.FileName == "neogeo.zip")
                {
                    var mapTxtPath = biosFile.ExpectedPath.Replace(biosFile.FileName, "");
                    using (StreamWriter sw = File.CreateText(Path.Combine(mapTxtPath, "map.txt")))
                    {
                        // Download full arcade map.txt
                        copyStatus = $"Downloading map.txt file for Arcade rom name mapping";
                        StateHasChanged();

                        Http.DefaultRequestHeaders.Clear();
                        Http.DefaultRequestHeaders.Add("User-Agent", "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36");
                        var response = await Http.GetAsync("https://raw.githubusercontent.com/ryanmsartor/TrimUI-Brick-and-Smart-Pro-Custom-MinUI-Paks/refs/heads/main/Roms/Arcade%20(FBN)/map.txt");

                        if (response.IsSuccessStatusCode)
                        {
                            copyStatus = $"map.txt file downloaded";
                            StateHasChanged();

                            var mapContent = await response.Content.ReadAsStringAsync();
                            // Hide the Neo Geo Bios from the rom list
                            mapContent = mapContent.Replace("neogeo.zip	Neo Geo Bios", "neogeo.zip	.Neo Geo Bios");
                            sw.Write(mapContent);
                        }
                        else
                        {
                            copyStatus = $"Full map.txt download failed, manually adding a map.txt for the neogeo bios so that it's hidden in the rom list";
                            StateHasChanged();

                            sw.WriteLine("neogeo.zip	.Neo Geo Bios");
                        }

                        copyStatus = $"map.txt added at {mapTxtPath}";
                        StateHasChanged();
                    }
                }

                // Small delay for UI feedback
                await Task.Delay(200);
            }

            copyPercentage = 100;
            copyProgress = "Complete!";
            copyStatus = "All selected files copied successfully";
            hasSuccessfullyCopiedFiles = true;
            await SetStatusMessage($"Successfully copied {GetUniqueSelectedFiles().Count()} unique BIOS file(s) to {selectedFiles.Count} location(s).", true);

            // Reset after 3 seconds
            await Task.Delay(3000);
            isCopying = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            isCopying = false;
            await SetStatusMessage($"Error copying files: {ex.Message}", false);
        }
    }

    private async Task TransferBiosFilesToDevice()
    {
        if (adbFileOps == null || !isAdbReady)
        {
            await SetStatusMessage("ADB is not properly configured.", false);
            return;
        }

        var selectedFiles = biosSystems
            .SelectMany(s => s.BiosFiles)
            .Where(f => !string.IsNullOrEmpty(f.SelectedPath))
            .ToList();

        if (selectedFiles.Count == 0)
        {
            await SetStatusMessage("No files selected to transfer.", false);
            return;
        }

        try
        {
            isTransferring = true;
            transferPercentage = 0;
            transferProgress = "Transferring...";
            transferStatus = "Preparing to transfer files...";
            StateHasChanged();

            // Auto-scroll to progress bar
            await Task.Delay(50);
            await Utils.ScrollToProgressContainerAsync(JSRuntime);

            // Prepare file list for transfer
            var biosFilesToCopy = selectedFiles.Select(bf => new BiosFileCopy
            {
                SourcePath = bf.SelectedPath,
                FileName = bf.FileName,
                SystemCode = bf.SystemCode
            }).ToList();

            // Transfer files using ADB
            var progress = new Progress<string>(status =>
            {
                transferStatus = status;
                InvokeAsync(() =>
                {
                    // Update percentage based on status message if it contains progress info
                    if (status.Contains("(") && status.Contains("/"))
                    {
                        var match = System.Text.RegularExpressions.Regex.Match(status, @"\((\d+)/(\d+)\)");
                        if (match.Success && int.TryParse(match.Groups[1].Value, out var current) && int.TryParse(match.Groups[2].Value, out var total))
                        {
                            transferPercentage = (int)((current * 100) / total);
                        }
                    }
                    StateHasChanged();
                });
            });

            var result = await adbFileOps.CopyBiosFilesAsync(biosFilesToCopy, progress);

            if (result.IsSuccess)
            {
                transferPercentage = 100;
                transferProgress = "Complete!";
                transferStatus = "All selected files transferred successfully";
                hasSuccessfullyTransferredFiles = true;
                await SetStatusMessage($"Successfully transferred {GetUniqueSelectedFiles().Count()} unique BIOS file(s) to device.", true);

                // Reset after 3 seconds
                await Task.Delay(3000);
                isTransferring = false;
            }
            else
            {
                await SetStatusMessage($"Error transferring files: {result.Error}", false);
            }
        }
        catch (Exception ex)
        {
            await SetStatusMessage($"Error transferring files: {ex.Message}", false);
        }
        finally
        {
            if (!hasSuccessfullyTransferredFiles)
            {
                isTransferring = false;
            }
            StateHasChanged();
        }
    }

